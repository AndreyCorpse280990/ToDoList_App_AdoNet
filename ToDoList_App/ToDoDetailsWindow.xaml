<Window x:Class="ToDoList_App.ToDoDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToDo Details" Height="342" Width="557">
    <Grid>
        <TextBlock Text="Title:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="titleTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,10,0,0" Width="300"/>

        <TextBlock Text="Deadline:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox Name="deadlineTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,40,0,0" Width="300"/>

        <TextBlock Text="Priority:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox Name="priorityTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,70,0,0" Width="300"/>
    </Grid>
</Window>
